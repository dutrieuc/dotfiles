set $mode_timesheet "\
<span foreground='$base0A'>ï€—</span>  \
<span foreground='$base05'> \
<span foreground='$base0A'>(<b>r</b>)</span>resume \
<span foreground='$base0A'>(<b>s</b>)</span>stop \
<span foreground='$base0A'>(<b>u</b>)</span>upload \
<span foreground='$base0A'>(<b>w</b>)</span>webapp \
</span>"

mode --pango_markup $mode_timesheet {
        $bindsym s exec toggl stop; mode "default"
        $bindsym r exec toggl continue; mode "default"
        $bindsym w exec toggl www; mode "default"
        $bindsym u exec $terminal -e "toggl-upload"; mode "default"

        # Return to default mode.
        $bindsym Escape mode "default"
}

## Launch // Recording Mode ##
$bindsym $mod+Shift+t mode $mode_timesheet
