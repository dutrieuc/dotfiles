bar {
    swaybar_command waybar
}

# Autostart applications
exec --no-startup-id pamac-tray
exec eval $(gnome-keyring-daemon --start)

exec {
    $xdg-dirs
    $swayidle
    $swappy_notify
    $autostart_dex
    $flashfocus
    $wlsunset
    $autotiling
    $foot_server
    $cliphist_store
    $cliphist_watch
    $workspace_icons
}

exec_always {
    $kanshi
    $auto_xdg_keyboard
    $poweralert
    $watch_playerctl
    $calendar_daemon
    $update_rofi_theme
    $create_rofi_config
    $swayr_daemon
}


# Startup apps
assign [class="discord"] $ws1
exec $HOME/.scripts/startup-sway
